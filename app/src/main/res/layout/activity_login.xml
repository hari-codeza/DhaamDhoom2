<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".Accounts.Login_A">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/top_view"
        android:visibility="gone"
        android:background="@color/black"
        android:alpha="0.4"
        android:orientation="horizontal">




    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="701dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
       >

        <ImageView
            android:id="@+id/Goback"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_white_cross"
            android:tint="@color/primaryDark" />


        <RelativeLayout
            android:id="@+id/login_details_RL3_id"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="0dp">

            <EditText
                android:id="@+id/txtmob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:width="@dimen/com_facebook_likeview_text_size"
                android:ems="10"
                android:hint="Enter Full Name"
                android:inputType="textPersonName"
                android:textColor="@color/primaryDark" />

            <EditText
                android:id="@+id/txtotp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtmob"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="-2dp"
                android:ems="10"
                android:hint="Enter Mobile No"

                android:inputType="textPersonName"
                android:textColor="@color/primaryDark" />

            <Button
                android:id="@+id/btnlog"
                android:layout_width="226dp"
                android:layout_height="45dp"
                android:layout_below="@+id/txtotp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:background="@drawable/d_round_red25"
                android:text="Login"
                android:textColor="@color/white" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </RelativeLayout>


            </HorizontalScrollView>

            <TextView
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/btnlog"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:text="--OR--"
                android:textColor="@color/primaryDark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/login_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Welcome To DD"
                android:textColor="@color/primaryDark"

                android:textSize="27dp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/login_terms_condition_txt"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_below="@+id/login_details_RL3_id"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="138dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:paddingTop="15dp"

            android:text="By signing up, you confirm that you agree to our \n Terms of Use and have read and understood \n our Privacy Policy."
            android:textColor="@color/primaryDark" />

        <ImageView
            android:id="@+id/google_btn"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_below="@+id/login_details_RL3_id"


            android:layout_marginLeft="72dp"
            android:layout_marginTop="13dp"
            android:padding="2dp"
            android:src="@drawable/ic_goggle"
            android:visibility="visible" />

        <ImageView
            android:visibility="visible"
            android:id="@+id/facebook_btn"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_below="@+id/login_details_RL3_id"
            android:layout_centerInParent="true"
            android:layout_marginTop="13dp"
            android:padding="2dp"
            android:src="@drawable/ic_facebook" />


    </RelativeLayout>

</RelativeLayout>
